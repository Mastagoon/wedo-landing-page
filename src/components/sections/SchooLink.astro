    <h4 class="uppercase text-primaryGray text-center">Features</h4>
    <div class="flex m-auto w-full flex-wrap gap-5 px-10 justify-center">
      {cardsData.map((c) => <Card svg={c.svg} title={c.title} text={c.text} />)}
